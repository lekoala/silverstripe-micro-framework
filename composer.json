{
    "name": "lekoala/silverstripe-micro-framework",
    "description": "A micro framework for SilverStripe",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "micro",
        "framework",
        "module"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Thomas",
            "email": "thomas@lekoala.be"
        }
    ],
    "require": {
        "silverstripe/framework": "^4.6"
    },
    "extra": {
        "installer-name": "micro-framework"
    },
    "autoload": {
        "psr-4": {
            "LeKoala\\MicroFramework\\": "src/",
            "LeKoala\\MicroFramework\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-micro-framework/issues"
    },
    "scripts": {
        "lint": "phpcs src/ tests/",
        "lint-clean": "phpcbf src/ tests/",
        "test": "phpunit -v"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
